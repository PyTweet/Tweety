tweet=None
        try:
            if flag.method.lower() in ("random", "ran", "r"):
                word = self.bot.get_ranword()
                tweet = self.bot.twitter.tweet(f"{word.response}\nMade with https://docs.api.breadbot.me/reference/api-reference/sentence-generator")
                await ctx.send(f"Posted! check it on https://twitter.com/TweetyBott/status/{tweet.id}")

            elif flag.method.lower() in ("reply", "re", "rep") and flag.tweet_id:
                tweet=self.bot.twitter.fetch_tweet(int(flag.tweet_id))
                tweet.reply(flag.text)
                await ctx.send(f"Reply complete! check it on https://twitter.com/TweetyBott/status/{tweet.id}")

            elif flag.method.lower() in ("", " ", "none"):
                tweet=self.bot.twitter.tweet(flag.text)
                await ctx.send(f"Posted! check it on https://twitter.com/TweetyBott/status/{tweet.id}")

            else:
                await ctx.send(f"Unknown Flag Executions, Flags Value: {v for k, v in flag.get_flags().items()}")

        except Exception as e:
            if isinstance(e, pytweet.Forbidden):
                await ctx.send(f"it returns:\n{e}")
                await ctx.send(f"Posted! check it on https://twitter.com/TweetyBott/status/{tweet.id}")

            else:
                raise e